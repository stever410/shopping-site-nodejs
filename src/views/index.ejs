                <ol class="flex text-grey-dark">
                    <li><a href="#" class="font-medium text-gray-400 mr-4 text-sm">Home</a></li>
                </ol>
            </nav> -->
            <div class="splide mx-auto mt-4">
                <div class="splide__track">
                    <ul class="splide__list">
                        <li class="splide__slide"><img src="/images/banner2.png"></li>
                        <li class="splide__slide"><img src="/images/banner.jpg"></li>
                        <li class="splide__slide"><img src="/images/banner1.jpg"></li>
                    </ul>
                </div>
            </div>
            <main class="pb-10">
